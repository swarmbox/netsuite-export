<configuration scan="true" debug="false">
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d [%t] %-5p %c - %m%n</pattern>
        </encoder>
    </appender>
    <logger name="com.swarmbox.netsuite" level="DEBUG"/>
    <logger name="org.apache.axis" level="INFO"/>
    <logger name="org.apache.axis.encoding" level="INFO"/>
    <logger name="org.apache.axis.message" level="INFO"/>
    <logger name="org.apache.axis.utils" level="INFO"/>
    <logger name="org.apache.commons.beanutils" level="INFO"/>
    <logger name="org.apache.commons.configuration" level="INFO"/>
    <logger name="org.mongodb" level="INFO"/>
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>
